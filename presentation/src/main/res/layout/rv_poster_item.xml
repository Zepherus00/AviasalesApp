<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_rv_item"
    android:layout_width="wrap_content"
    android:layout_marginEnd="36dp"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster_rv_poster_item"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:background="@drawable/bg_black_r16"
        tools:background="@color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_rv_poster_item"
        style="@style/title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Die Antwoord" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/town_rv_poster_item"
        style="@style/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Будапешт" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/price_rv_poster_item"
        style="@style/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_plane"
        android:drawablePadding="4dp"
        tools:text="от 22 264Р" />
</androidx.appcompat.widget.LinearLayoutCompat>